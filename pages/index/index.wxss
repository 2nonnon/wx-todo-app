.note {
  box-sizing: border-box;
  flex-shrink: 0;
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 4%;
  gap: 6rpx 0;
  background-color: #fff;
  border-radius: 30rpx;
}
.title {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.time {
  font-size: 30rpx;
  font-weight: 300;
}
.addTap {
  position: fixed;
  bottom: 150rpx;
  right: 60rpx;
  background-color: #2AAE67;
  color: #fff;
  height: 90rpx;
  width: 90rpx;
  border-radius: 50%;
  box-shadow: 0 5rpx 20rpx #2aae6898;
  background-repeat: no-repeat;
  background-image: linear-gradient(#fff, #fff), linear-gradient(#fff, #fff);
  background-size: 50% 5%, 5% 50%;
  background-position: center;
}
