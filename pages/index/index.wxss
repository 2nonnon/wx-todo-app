/**index.wxss**/
.container {
  padding: 0 5%;
  font-size: 35rpx;
  background-color: #F7F7F7;
  min-height: 100vh;
  transition: all .3s;
}
.header {
  position: sticky;
  left: 0;
  top: 0;
  height: 160rpx;
  background-color: inherit;
  z-index: 999;
}
.filter {
  height: 100rpx;
  font-size: 50rpx;
  font-weight: 500;
  line-height: 130rpx;
  padding-left: 2%;
}
.count {
  font-size: 30rpx;
  font-weight: 300;
  padding-left: 2.5%;
}
.list {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx 0;
  width: 100%;
  padding-bottom: 300rpx;
}
.scroll {
  width: 100%;
}
