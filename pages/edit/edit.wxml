<view class="container">
  <view class="header">
    <view class="title">{{note.title}}</view>
    <view class="time">{{note.edited}}</view>
  </view>
  <view class="main">
    <view class="toolbar">
      <view class="tool">
        <image src="../../icon/store.svg" mode="aspectFill"></image>
      </view>
      <view class="tool">
        <image src="../../icon/goback.svg" mode="aspectFill"></image>
      </view>
      <view class="tool">
        <image src="../../icon/goto.svg" mode="aspectFill"></image>
      </view>
    </view>
    <textarea class="text" model:value="{{content}}" bindinput="inputHandler"></textarea>
    <view class="characters">共 {{charactersCount}} 字</view>
    <!-- <view class="preview">
      <rich-text nodes="{{preview}}"></rich-text>
    </view> -->
  </view>
  <view class="toolbar">
    <view class="tool">
      <image src="../../icon/share.svg" mode="aspectFill"></image>
      <view class="name">分享</view>
    </view>
    <view class="tool">
      <image src="../../icon/star_line_fff.svg" mode="aspectFill"></image>
      <view class="name">收藏</view>
    </view>
    <view class="tool">
      <image src="../../icon/delete.svg" mode="aspectFill"></image>
      <view class="name">删除</view>
    </view>
    <view class="tool">
      <image src="../../icon/print.svg" mode="aspectFill"></image>
      <view class="name">打印</view>
    </view>
  </view>
</view>